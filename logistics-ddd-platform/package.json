{
  "name": "logistics-ddd-platform",
  "version": "1.0.0",
  "description": "DDD-based logistics platform with inventory, tracking, and backoffice",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "bun test tests/**/*.{test,spec}.{js,ts}",
    "test:watch": "bun test tests/**/*.{test,spec}.{js,ts} --watch",
    "test:coverage": "bun test tests/**/*.{test,spec}.{js,ts} --coverage",
    "test:perf": "bun test tests/**/*.perf.{test,spec}.{js,ts}",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write src/**/*.{ts,js}",
    "format:check": "prettier --check src/**/*.{ts} || exit 0",
    "build": "bun run tsc",
    "type-check": "tsc --noEmit",
    "dev": "bun --watch src/apps/inventory/backend/start.ts",
    "dev:inventory": "bun --watch src/apps/inventory/backend/start.ts",
    "dev:backoffice": "bun --watch src/apps/backoffice/backend/start.ts",
    "start": "bun src/apps/inventory/backend/start.ts",
    "consumer:inventory": "bun src/apps/inventory/consumers/start.ts",
    "consumer:backoffice": "bun src/apps/backoffice/consumers/start.ts",
    "consumer:logistics": "bun src/apps/logistics/consumers/start.ts"
  },
  "devDependencies": {
    "@types/amqplib": "0.10.6",
    "@types/bun": "latest",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.37.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^9.1.1",
    "amqplib": "^0.10.9",
    "chalk": "^5.6.2",
    "express": "^5.1.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.17",
    "uuid": "^13.0.0"
  }
}
